<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.inbox">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:elevation="20dp"
        app:cardBackgroundColor="@color/blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                app:cardBackgroundColor="@color/blue"
                app:cardCornerRadius="50dp">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/wisha" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:text="Web Developer"
                android:textColor="@color/yellow"
                android:textSize="24sp"
                android:textStyle="bold" />


        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="253dp"
        android:layout_height="49dp"
        android:layout_marginTop="200dp"
        app:cardBackgroundColor="@color/text"
        app:cardCornerRadius="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="@+id/cardView">

        <androidx.cardview.widget.CardView
            android:layout_width="57dp"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:padding="10dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="40dp">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/pic1" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="177dp"
            android:layout_height="32dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="12dp"
            android:textColor="@color/white"
            android:text="I need a website"
            android:textSize="16sp"
            />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="318dp"
        android:layout_height="50dp"
        android:layout_marginTop="144dp"
        app:cardBackgroundColor="@color/blue"
        app:cardCornerRadius="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="@+id/cardView">

        <androidx.cardview.widget.CardView
            android:layout_width="57dp"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="260dp"
            android:padding="10dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="40dp">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/wisha" />

        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="232dp"
            android:layout_height="32dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"
            android:textColor="@color/white"
            android:text="     Hello, How can I help you?"
            android:textSize="16sp"
            />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="175dp"
        android:layout_height="46dp"
        android:layout_marginTop="92dp"
        app:cardBackgroundColor="@color/text"
        app:cardCornerRadius="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.007"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="@+id/cardView">

        <androidx.cardview.widget.CardView
            android:layout_width="57dp"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:padding="10dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="40dp">

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/pic1" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="232dp"
            android:layout_height="32dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="12dp"
            android:text="Hi"
            android:textColor="@color/white"
            android:textSize="16sp"
             />



    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="318dp"
        android:layout_height="50dp"
        android:layout_marginTop="256dp"
        app:cardBackgroundColor="@color/blue"
        app:cardCornerRadius="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.986"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="@+id/cardView">

        <androidx.cardview.widget.CardView
            android:layout_width="57dp"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="260dp"
            android:padding="10dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="40dp">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/wisha" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvRequirement"
            android:layout_width="232dp"
            android:layout_height="32dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"
            android:text="     Send me your requirements"
            android:textColor="@color/white"
            android:textSize="16sp"
             />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="253dp"
        android:layout_height="49dp"
        android:layout_marginTop="312dp"
        app:cardBackgroundColor="@color/text"
        app:cardCornerRadius="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="@+id/cardView">

        <androidx.cardview.widget.CardView
            android:layout_width="57dp"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:padding="10dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="40dp">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/pic1" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="177dp"
            android:layout_height="32dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="12dp"
            android:text="Ok Just a minute"
            android:textColor="@color/white"
            android:textSize="16sp"
             />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/lEmail"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/edit_text_background"
                android:ems="10"
                android:hint="Type Your Message"
                android:inputType="text"
                android:textColor="@color/text"
                android:textSize="16sp" />

            <Button
                android:id="@+id/button2"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:backgroundTint="@color/blue"
                android:text="Send"
                android:textColor="@color/white" />
        </LinearLayout>


    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>